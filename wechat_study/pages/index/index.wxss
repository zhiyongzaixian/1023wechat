.indexContainer {
  display: flex;
  flex-direction: column;
  /* 设置侧轴对齐方式 */
  align-items: center;
  /* 设置主轴对齐方式 */
  /* justify-content: center; */

  background: #f0f;
  height: 100%;
}

.avatarImg {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 100rpx 0;
}

button {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 100rpx 0;
  font-size: 24rpx;
  text-align: center;
  line-height: 200rpx;
}

.userName {
  font-size: 32rpx;
  margin: 100rpx 0;
}

.goStudy {
  width: 300rpx;
  height:80rpx;
  text-align: center;
  line-height: 80rpx;
  border: 1rpx solid #999;
  border-radius: 10rpx;
}