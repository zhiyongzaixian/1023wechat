<view class="videoContainer">
  <!-- 头部区域 -->
  <view class="header">
    <image src="/static/images/video/video.jpg"></image>
    <view class="search">
      搜索音乐
    </view>
    <image src="/static/images/logo.png"></image>
  </view>

  <!-- 导航区域 -->
  <scroll-view scroll-x class="navScroll" enable-flex>
    <view class="navItem " wx:for="{{navList}}" wx:key="id">
      <view class="navContent {{navId === item.id && 'active'}}" id="{{item.id}}" data-test="abc" data-id="{{item.id}}" bindtap='changeNavId'>
        {{item.name}}
      </view>
    </view>
  </scroll-view>
</view>
