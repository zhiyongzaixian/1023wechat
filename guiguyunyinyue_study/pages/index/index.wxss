/* pages/index/index.wxss */
.banners {
  width: 100%;
  height: 300rpx;
}

.banners image {
  width: 100%;
  height: 100%;
}

/* 5个图标导航区域 */
.navContainer {
  display: flex;
  width: 100%;

}

.navContainer .navItem {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  font-size: 50rpx;
  background: rgb(240, 19, 19);
  border-radius: 50%;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  margin: 10rpx 0;
}

.navItem text {
  font-size: 26rpx;
}


/*推荐歌曲 */
.recommend {
  padding: 0 20rpx;
}

.recommendScroll {
  display: flex;
  margin-top: 20rpx;
  height: 300rpx;
}

.recommendScroll .scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}

.recommendScroll .scrollItem  image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.recommendScroll .scrollItem text {
  font-size: 26rpx;
  display: block;
  /* 单行文本溢出 */
  /*white-space: nowrap;*/
  /*overflow: hidden;*/
  /*text-overflow: ellipsis;*/

  /* 多行文本溢出 */
  display: -webkit-box;
  -webkit-box-orient: vertical;  /* 对其方式 */
  -webkit-line-clamp: 2;  /* 行数 */
  overflow: hidden;
  text-overflow: ellipsis;
}



/* 排行榜区域 */
.topList {
  padding: 0 20rpx;
}

.topItem {
  width: 97%;
  background: #ededed;
}

.topListSwiper {
  height: 460rpx;
}
.topItem .title {
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;

}

.musicItem {
  /* 当一个元素设置为flex以后，其子元素会自动成为block元素*/
  display: flex;
  margin-bottom: 20rpx;
}

.musicItem image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.musicItem text {
  height: 100rpx;
  line-height: 100rpx;
}

.musicItem .order {
  width: 100rpx;
  text-align: center;
}






