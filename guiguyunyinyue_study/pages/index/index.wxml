<view class="indexContainer">
  <!-- 首页banner区域 -->
  <swiper class="banners" indicator-dots indicator-color='ivory' indicator-active-color='#d43c33' circular>
    <swiper-item wx:for="{{bannerList}}" wx:key="bannerId" wx:for-item="bannerItem">
      <image src="{{bannerItem.pic}}"></image>
    </swiper-item>
  </swiper>

  <!-- 5个图标导航区域 -->
  <view class="navContainer">
    <view class="navItem">
      <text class="iconfont icon-meirituijian-"></text>
      <text>每日推荐</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-gedan1"></text>
      <text>歌单</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-icon-ranking"></text>
      <text>排行榜</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-diantai"></text>
      <text>电台</text>
    </view>
    <view class="navItem">
      <text class="iconfont icon-zhiboguankanliangbofangsheyingshexiangjixianxing"></text>
      <text>直播</text>
    </view>

  </view>

  <!-- 推荐歌曲  -->
  <view class="recommend">
    <!-- 头部  -->
    <NavHeader title='推荐歌曲' navContent="为你精心推荐"></NavHeader>
    <!-- 内容区 -->
    <scroll-view class="recommendScroll" enable-flex scroll-x>
      <view class="scrollItem" wx:for="{{recommendList}}" wx:key="id">
        <image src="{{item.picUrl}}"></image>
        <text>{{item.name}}</text>
      </view>
    </scroll-view>
  </view>


  <!-- 排行榜区域 -->
  <view class="topList">
    <!-- 头部 -->
    <NavHeader title="排行榜" navContent="热歌风向标"></NavHeader>
    <!-- 内容区 -->
    <swiper class="topListSwiper" next-margin="50rpx">
      <swiper-item>
        <view class="topItem">
          <view class="title">云音乐国电榜</view>
          <view class="musicItem">
            <image src="/static/images/nvsheng.jpg"></image>
            <text class="order">1</text>
            <text class="musicName">光辉岁月</text>
          </view>
          <view class="musicItem">
            <image src="/static/images/nvsheng.jpg"></image>
            <text class="order">2</text>
            <text class="musicName">海阔天空</text>
          </view>
          <view class="musicItem">
            <image src="/static/images/nvsheng.jpg"></image>
            <text class="order">3</text>
            <text class="musicName">真的爱你</text>
          </view>
        </view>
      </swiper-item>
      <swiper-item>
        <view class="topItem">
          <view class="title">云音乐国电榜</view>
          <view class="musicItem">
            <image src="/static/images/nvsheng.jpg"></image>
            <text>1</text>
            <text>光辉岁月</text>
          </view>
          <view class="musicItem">
            <image src="/static/images/nvsheng.jpg"></image>
            <text>2</text>
            <text>海阔天空</text>
          </view>
          <view class="musicItem">
            <image src="/static/images/nvsheng.jpg"></image>
            <text>3</text>
            <text>真的爱你</text>
          </view>
        </view>
      </swiper-item>
    </swiper>
  </view>
</view>
