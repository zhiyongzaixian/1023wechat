/* pages/recommendSong/recommendSong.wxss */

/* 头部样式 */
.header {
  position: relative;
}
.header image {
  width: 100%;
  height: 300rpx;
}


.header .date {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -150rpx;
  margin-top: -50rpx;
  width: 300rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}

/*列表区域*/
.recommendList{
  position: relative;
  top: -20rpx;
  background: #fff;
  padding: 0 20rpx;
  border-radius: 30rpx;
}

.recommendHeader {
  height: 80rpx;
  line-height: 80rpx;
}
.recommendHeader .more {
  float: right;
}

.recommendItem {
  display: flex;
}
.recommendItem .musicImg {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}

.recommendItem .musicInfo {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;

}
.recommendItem .musicInfo text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


.recommendItem .iconfont {
  position: absolute;
  right: 10rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
}












